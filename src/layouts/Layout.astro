    const btnIrLuis = document.getElementById("btn-ir-luis");
    const btnIrKarla = document.getElementById("btn-ir-karla");
    const btnVolverHeader = document.getElementById("btn-volver-header");

    btnIrLuis.addEventListener("click", () => {
      inicio.classList.add("oculto");
